<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".views.activity.ProfileActivity">

    <include layout="@layout/toolbar_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:background="@drawable/arc_drawable">

        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_30"
            android:src="@drawable/t_mark_logo_final" />

        <com.trackkers.tmark.customviews.MyTextview
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />


        <com.trackkers.tmark.customviews.MyTextview
            android:id="@+id/tv_emp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_60"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight=".6"
        android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_05"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiCompanyName"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:theme="@style/TextLabe2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_emp_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/employee_code"
                        android:fontFamily="@font/aver_bold"
                        android:background="@null"
                        android:inputType="text"
                        android:focusable="false"
                        android:paddingTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_10"/>

                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:theme="@style/TextLabe2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_emp_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/employee_type"
                        android:fontFamily="@font/aver_bold"
                        android:background="@null"
                        android:inputType="text"
                        android:focusable="false"
                        android:maxLines="1"
                        android:paddingTop="@dimen/dp_10"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_10"/>


                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:theme="@style/TextLabe2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_emp_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/employee_dob"
                        android:fontFamily="@font/aver_bold"
                        android:background="@null"
                        android:inputType="text"
                        android:focusable="false"
                        android:paddingTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_10"/>

                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:theme="@style/TextLabe2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_emp_doj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/employee_doj"
                        android:fontFamily="@font/aver_bold"
                        android:background="@null"
                        android:inputType="text"
                        android:focusable="false"
                        android:paddingTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_10"/>


                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:theme="@style/TextLabe2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_emp_mob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/employee_mobile_number"
                        android:fontFamily="@font/aver_bold"
                        android:background="@null"
                        android:inputType="text"
                        android:focusable="false"
                        android:paddingTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_10"/>

                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:theme="@style/TextLabe2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_emp_nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/employee_nationality"
                        android:fontFamily="@font/aver_bold"
                        android:background="@null"
                        android:inputType="text"
                        android:focusable="false"
                        android:paddingTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_10"/>


                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:theme="@style/TextLabe2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_emp_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/employee_address"
                        android:fontFamily="@font/aver_bold"
                        android:background="@null"
                        android:inputType="text"
                        android:focusable="false"
                        android:paddingTop="@dimen/dp_10"
                        android:maxLines="1"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

    </ScrollView>

</LinearLayout>