<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/gradient_rect_button"
            android:orientation="vertical">

            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_checkpoint_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/checkpoint_name"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"/>


            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_checkpoint_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="Date"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"/>

            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_checkpoint_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="Time"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"/>

            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_checkpoint_round_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="Round No."
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>