<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_documents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activity.operations.ViewDocuments">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">


            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/aadhar"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/dp_15"/>

            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/medical"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/dp_15"/>

            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_uanc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/uanc"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_uanc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/dp_15"/>

            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_esic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/esic"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_esic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/dp_15"/>


            <com.trackkers.tmark.customviews.MyTextview
                android:id="@+id/tv_driving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/driving"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_driving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/dp_15"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>