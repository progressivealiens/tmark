<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_emp_checkin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".views.activity.bulk_guard.BulkGuardCheckin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_emp_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/name"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite" />

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_emp_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/id"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite" />

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_site_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/site"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite" />

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_route_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/route"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite" />

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_route_start_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/start_address"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite" />

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_route_end_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/end_address"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite" />

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_checkin_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/checkin_time"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_checkintime"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite"
                        android:visibility="gone" />

                    <com.trackkers.tmark.customviews.MyTextview
                        android:id="@+id/tv_checkout_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/checkout_time"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_checkouttime"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.trackkers.tmark.customviews.MyButton
                android:id="@+id/btn_emp_checkin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/selector_button"
                android:gravity="center"
                android:text="@string/check_in"
                android:textAllCaps="false"
                android:textColor="@drawable/text_selector"
                android:textSize="15sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_emp_pic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:contentDescription="@string/image" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>